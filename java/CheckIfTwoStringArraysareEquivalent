class Solution {
    public boolean arrayStringsAreEqual(String[] word1, String[] word2) {
        // two sbs 
        StringBuilder sb1 = new StringBuilder();
        StringBuilder sb2 = new StringBuilder();
        
        // check n append
        for (String c : word1) {
            sb1.append(c);
        }
        
        for ( String f : word2) {
            sb2.append(f);
        }
        
        // equals
        return sb1.toString().equals(sb2.toString());
    }
}
