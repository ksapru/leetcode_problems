// higher time complex answer you wrote easier to understand 

class Solution {
    public char nextGreatestLetter(char[] letters, char target) {
        
        Arrays.sort(letters);
        for (int i = 0; i < letters.length; i++) {
                if (letters[i] > target) {
                    return letters[i];
                }
        }
    
                
                return letters[0];
        }
    }
    
   // less time complex formula you wrote very easy to understand 
   
    class Solution {
    public char nextGreatestLetter(char[] letters, char target) {
        
        
        for (char c : letters) {
            if (c > target) {
                return c; 
            }
        }
        
        
        return letters[0]; 
    }
}
